<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
		<tbody>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to book.title, book_path(book.id) %></td>
				<td></td>
				<td></td>
			</tr>
		</tbody>
	<% end %>
</table>


<h2>New book</h2>
<!-- form_withにオプション追記 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>